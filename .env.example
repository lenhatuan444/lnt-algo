# Copy to .env and adjust values as needed

# Exchange & symbols
EXCHANGE_ID=binance
SYMBOLS=BTC/USDT,ETH/USDT,SOL/USDT

# Candle timeframe and small delay to let the candle finalize
TIMEFRAME=4h
POST_CLOSE_DELAY_SEC=5

# Cron: run at exactly each 4th hour (00, 04, 08, 12, 16, 20)
CRON_EXPRESSION=0 0 */4 * * *
# Timezone for the cron trigger (IANA tz database name)
# Use UTC for exchange-aligned closes, or your local tz like Asia/Ho_Chi_Minh
CRON_TZ=UTC

# Misc
RUN_ON_START=true
# If true, log each result as JSON lines (better for log aggregators)
LOG_JSON=false
